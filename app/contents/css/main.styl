/**
  * Fonts via Google Webfonts
  */
@font-face {
  font-family: 'Sail';
  font-style: normal;
  font-weight: 400;
  src: local('Sail'), local('Sail-Regular'), url('sail.woff') format('woff');
}

/**
  * Basic layout stuff
  */
body
  font-family "Gill Sans", "Trebuchet MS", "Helvetica", "Arial", sans-serif
  text-align center
  font-size 10px
  background url('../images/small-bubbles.png') repeat rgb(245, 202, 132)
  margin 0
  padding 0
  color rgb(91, 92, 92)

.wrapper
  width 60%
  min-width 684px
  text-align left
  margin 0 auto
  background-color rgba(249, 255, 255, 0.7)
  font-size 1.85em
  line-height 1.5em
  padding 1.5em
  border-top 4em solid rgb(207, 37, 40)

.title
  font-family 'Sail', cursive
  font-size 486%
  //font-size 3vw
  line-height 1.25em
  color rgb(55, 134, 138)
  margin 0.25em
  background url('../images/beer.png') no-repeat
  padding-left 96px
  text-shadow 2px 2px rgba(36, 19, 25, 0.3)

/**
  * Error Messages
  */
.msg
  list-style-type none
.msg.err
  color rgb(207, 37, 40)
  font-weight bold

/**
  * Page Styling
  */
.page
  display none
.active.page
  display block

/* Search Form */
.locate-beer
  border none
  margin 0 auto
  padding 0
  text-align center

.search-label
  font-weight bold
  display block
  font-size 1.5em
  margin-bottom 0.5em

.query
  border 1px solid rgb(36, 19, 25)
  color rgb(36, 19, 25)
  font-size 1.5em
  border-radius 4px
  padding 0.25em
  box-shadow 2px 2px 10px rgba(0, 0, 0, 0.3)
  background rgba(249, 255, 255, 0.9)  

.search
  display block
  font-size 1.5em
  margin 0.5em auto
  background rgb(55, 134, 138)
  font-family 'Sail', cursive
  color rgb(249, 255, 255, 0.9)
  text-shadow 2px 2px rgba(36, 19, 25, 0.3)
  box-shadow 2px 2px 10px rgba(0, 0, 0, 0.3)
  border-radius 4px
  cursor pointer
  padding 0.25em
